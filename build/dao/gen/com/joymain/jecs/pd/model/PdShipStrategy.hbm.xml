<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping

>

    <class
            name="com.joymain.jecs.pd.model.PdShipStrategy"
            table="PD_SHIP_STRATEGY"
    >

    <id
        name="ssId"
            column="SS_ID"
                type="java.lang.Long"
    >

    <!-- The generator-class attribute of @hibernate.id is deprecated, use the @hibernate.generator tag instead -->
    <generator class="native">

    </generator>

    </id>

        <property
            name="compayCode"
                    column="COMPAY_CODE"
                length="2"
        >

        </property>

        <property
            name="ssName"
                    column="SS_NAME"
                length="200"
        >

        </property>

        <property
            name="ssDesc"
                    column="SS_DESC"
                length="500"
        >

        </property>

    </class>    

</hibernate-mapping>

